<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/projects_add_project_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/projects_text_back"
        android:elevation="2dp"
        android:fontFamily="sans-serif"
        android:padding="5dip"
        app:layout_constraintRight_toLeftOf="@id/projects_addProject_fab"
        app:layout_constraintBottom_toBottomOf="@id/projects_addProject_fab"
        android:text="@string/project"
        android:visibility="invisible"
        android:textColor="@android:color/white"
        android:typeface="normal" />

    <TextView
        android:id="@+id/projects_add_folder_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/projects_text_back"
        android:elevation="2dp"
        android:visibility="invisible"
        android:fontFamily="sans-serif"
        android:padding="5dip"
        app:layout_constraintRight_toLeftOf="@id/projects_addFolder_fab"
        app:layout_constraintBottom_toBottomOf="@id/projects_addFolder_fab"
        android:text="@string/folder"
        android:textColor="@android:color/white"
        android:typeface="normal" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/projects_addFolder_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="80dp"
        android:src="@drawable/baseline_folder_black_24"
        android:visibility="invisible"
        app:backgroundTint="@color/colorBottomAppBar"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/projects_addProject_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/projects_addFolder_fab"
        android:layout_marginBottom="15dp"
        android:src="@drawable/baseline_assignment_black_24"
        android:visibility="invisible"
        app:backgroundTint="@color/colorBottomAppBar"
        app:fabSize="mini" />

</androidx.constraintlayout.widget.ConstraintLayout>